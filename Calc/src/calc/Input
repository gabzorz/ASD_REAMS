import java.util.Scanner;

public class Input {
	
	private Scanner userInput;
	private String stringCalculation;
	
	public Input() {
		userInput = new Scanner(System.in);
		stringCalculation = "";
	}
	// Ask for user input
	public void setStringCalculation() {
		System.out.println("Please enter your calculation. Enter q to quit.");
		stringCalculation = userInput.nextLine();
	}
	
	public String getStringCalculation() {
		return stringCalculation;
	}

	public String getNewLine() {
		return userInput.nextLine();
	}
	
	public void close() {
		if (userInput != null) {
		userInput.close();
		}
	}
}